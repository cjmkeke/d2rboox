<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dw_black"
    tools:context=".dialog.CraftItemShow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/dw_title"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_intent_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dw_main"
                android:textColor="@color/dia_color_main"
                android:text="매직 아이템"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_intent_item_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/dw_main"
                android:textColor="@color/dia_color_magic_item"
                tools:text="정보 표시"
                android:textSize="13sp" />

        </LinearLayout>



    </LinearLayout>



</LinearLayout>