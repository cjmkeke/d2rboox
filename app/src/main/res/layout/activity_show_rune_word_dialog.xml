<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dw_black"
    android:orientation="vertical"
    tools:context=".dialog.ShowRuneWordDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/back_rune_word"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_rune_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_rune_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_rune_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_rune_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/iv_rune_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:scaleType="centerCrop" />
            />

            <ImageView
                android:id="@+id/iv_rune_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rune_1_name"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="13sp"
                tools:text="Eld" />

            <TextView
                android:id="@+id/tv_rune_2_name"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="13sp"
                tools:text="엘드 [Eld]" />

            <TextView
                android:id="@+id/tv_rune_3_name"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="13sp"
                tools:text="엘드 [Eld]" />

            <TextView
                android:id="@+id/tv_rune_4_name"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="13sp"
                tools:text="엘드 [Eld]" />

            <TextView
                android:id="@+id/tv_rune_5_name"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="13sp"
                tools:text="엘드 [Eld]" />

            <TextView
                android:id="@+id/tv_rune_6_name"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="13sp"
                tools:text="엘드 [Eld]" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_admin"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_rune_1_name"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dw_title"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    tools:text="Eld" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_rune_2_name"
                    android:layout_width="67dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dw_title"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    tools:text="Thul" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_rune_3_name"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dw_title"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    tools:text="Eld" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_rune_4_name"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dw_title"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    tools:text="Eld" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_rune_5_name"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dw_title"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    tools:text="Eld" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_rune_6_name"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/dw_title"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    tools:text="Eld" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/select_button"
                android:gravity="center"
                android:text="수정"
                android:textColor="@color/dia_color"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <WebView
                android:id="@+id/webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#392A19"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/dw_main"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    android:text="룬워드 이름"/>

                <TextView
                    android:id="@+id/tv_show_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    android:background="@drawable/dw_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/dw_main"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    android:text="아이템"/>

                <TextView
                    android:id="@+id/tv_show_need_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    android:background="@drawable/dw_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/dw_main"
                    android:gravity="center"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    android:text="장착 레벨"/>

                <TextView
                    android:id="@+id/tv_show_level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/dia_color"
                    android:textSize="15sp"
                    android:background="@drawable/dw_title" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dw_message"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="15sp"
                android:text="아이템 옵션"/>

            <EditText
                android:id="@+id/et_show_item_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/dw_main"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="15sp"
                android:text="아이템 옵션"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dw_message"
                android:gravity="center"
                android:textColor="@color/dia_color"
                android:textSize="15sp"
                android:text="아이템 코멘트"/>

            <TextView
                android:id="@+id/tv_show_item_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@drawable/dw_main"
                android:gravity="left"
                android:padding="10dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:textColor="@color/dia_color"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_modify_runeword_options"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dw_button"
                android:gravity="center"
                android:text="아이템 수정"
                android:textColor="@color/dia_color"
                android:visibility="gone"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
