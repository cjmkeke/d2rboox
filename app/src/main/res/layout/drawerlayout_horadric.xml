<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="start"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/back_horadric"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@drawable/back_drawerlayout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="80dp"
                android:text="호라드릭 큐브 1"
                android:textColor="@color/dia_color"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_menu_2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="80dp"
                android:text="호라드릭 큐브 2"
                android:textColor="@color/dia_color"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_menu_3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="80dp"
                android:text="호라드릭 큐브 3"
                android:textColor="@color/dia_color"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_menu_4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="80dp"
                android:text="호라드릭 큐브 4"
                android:textColor="@color/dia_color"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tv_menu_5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left|center"
                android:paddingLeft="80dp"
                android:text="호라드릭 큐브 5"
                android:textColor="@color/dia_color"
                android:textSize="20sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>