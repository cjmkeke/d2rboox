<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택되었을 때 테두리 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#0049390F" /> <!-- 배경색 투명 -->
            <stroke android:width="2dp" android:color="@color/dia_color_main"/> <!-- 빨간색 테두리 -->
        </shape>
    </item>
    <!-- 선택되지 않았을 때 테두리 -->
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="#6C1717" /> <!-- 배경색 투명 -->
            <stroke android:width="2dp" android:color="#530B0B"/> <!-- 파란색 테두리 -->
        </shape>
    </item>
</selector>
