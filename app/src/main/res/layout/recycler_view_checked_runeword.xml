<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#3C3D3D"
        android:visibility="visible"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ball" />

        <TextView
            android:id="@+id/tv_rune_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nanumextrabold"
            android:gravity="center_vertical"
            android:text="테스트"
            android:textColor="@color/dia_color"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_space"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_item_level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:fontFamily="@font/nanumextrabold"
            android:gravity="center_vertical|right"
            android:text="테스트"
            android:textColor="@color/dia_color"
            android:visibility="visible"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_sorceress"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/sorceress"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_paladins"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/paladins"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_necromancer"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/necromancer"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_druid"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/druid"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_barbarian"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/barbarian"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_assassin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/assassin"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_amazon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/amazon"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_mercenary"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/mercenary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_early"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/silver_star"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_special_item"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/gold_star"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_ladder"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/ladder"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_modify"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/p"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>