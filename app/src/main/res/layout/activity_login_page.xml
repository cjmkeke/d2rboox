<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".settings.LoginPage">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="로그인을 하면 커뮤니티 서비스를 이용할 수 있습니다."
            android:textColor="@color/dia_color_craft"
            android:background="@drawable/dw_main"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_main_welcome"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_welcome_message"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/dia_color"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_main_messages"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/dw_title"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/login_main_messages_login"
            android:textColor="@color/dia_color"
            android:textSize="14sp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="로그아웃"
            android:textColor="@color/dia_color"
            android:background="@drawable/dw_main"
            android:textSize="20sp" />


    </LinearLayout>



</LinearLayout>